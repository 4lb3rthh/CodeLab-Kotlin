<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miramicodigo.pokekotlin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.PokeKtActivity"
            android:label="@string/activity.kotlin"/>
        <activity android:name=".ui.PokeActivity"
            android:label="@string/activity.java"/>
        <activity android:name=".ui.DetalleActivity"
            android:label="@string/detalle.java"/>
        <activity android:name=".ui.DetalleKtActivity"
            android:label="@string/detalle.kotlin"/>
    </application>

</manifest>